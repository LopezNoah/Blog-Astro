<body id="body">
  <main>
    <div class="min-h-full">
        <Navbar/>
        <div id="content" class="px-2 sm:px-0 w-11/12 mr-auto ml-auto max-w-5xl wrapper">
            {posts.map(post => 
                <PostCard
                  url={post.url}
                  title={post.frontmatter.title}
                  description={post.frontmatter.description}
                  emoji={post.frontmatter.emoji}
                />
            )}
        </div>
    </div>
  </main>
</body>
