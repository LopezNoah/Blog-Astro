---

const { url, emoji, title, description } = Astro.props;

---

<article class="relative block group h-48 mb-6 max-w-48 bg-sky-200 rounded-2xl">
    <span class="absolute inset-0 border-2 border-black border-dashed rounded-2xl"></span>
    <a href={url} class="rounded-2xl relative flex items-end h-full transition-transform transform bg-white border-2 border-black group-hover:-translate-x-2 group-hover:-translate-y-2 bg-zin-200">
        <div class="px-8 pb-8 transition-opacity group-hover:opacity-0 group-hover:absolute">
            <div class="text-5xl" >{emoji}</div>
            <h2 class="mt-4 text-2xl font-medium">{title}</h2>
        </div>
        <div class="absolute lg:pb-8 pb-0 lg:px-8 px-6 transition-opacity opacity-0 group-hover:opacity-100 group-hover:relative lg:block hidden">
            <h2 class="mt-4 text-2xl font-medium">{title}</h2>
            <p class="mt-4">{description}</p>
            <p class="mt-8 font-bold">Read more</p>
        </div>
    </a>
</article>
